<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_feedback_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/img_avatar"
            android:gravity="center"
            android:maxLength="2"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            tools:text="ДТ" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_feedback_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#4D4D4D"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Имя заказчика" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="5dp">

                <RatingBar
                    android:rating="4.5"
                    android:id="@+id/rb_feedback_rate"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5" />

                <TextView
                    android:id="@+id/tv_feedback_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:gravity="center_vertical"
                    android:textColor="#4D4D4D"
                    android:text="5 yil" />
            </LinearLayout>
            <TextView
                android:layout_gravity="start"
                android:id="@+id/text_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#4784DE"
                android:text="180 000 so‘m/oyiga" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>